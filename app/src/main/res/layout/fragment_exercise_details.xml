<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ExerciseDetails"
    android:orientation="vertical"
    android:background="@color/background">

    <AutoCompleteTextView
        android:id="@+id/exerciseDetails_name"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/background_dark"
        android:gravity="center"
        android:text="New Exercise"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/exerciseDetails_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:text="No description"
        android:ems="1"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/exerciseDetails_deleteButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:scaleType="fitCenter"
            android:backgroundTint="#ddd"
            android:src="@drawable/thrash_icon_background_dark" />

        <ImageButton
            android:id="@+id/exerciseDetails_saveButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:scaleType="fitCenter"
            android:backgroundTint="#ddd"
            android:src="@drawable/save_icon_background_dark" />

    </LinearLayout>

</LinearLayout>