<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home2">
    <fragment
        android:id="@+id/training"
        android:name="com.engineer.mobiletrainer.Training"
        android:label="fragment_training"
        tools:layout="@layout/fragment_training" />
    <fragment
        android:id="@+id/exerciseChoice"
        android:name="com.engineer.mobiletrainer.ExerciseChoice"
        android:label="fragment_exercise_choice"
        tools:layout="@layout/fragment_exercise_choice" >
        <action
            android:id="@+id/action_exerciseChoice_to_training"
            app:destination="@id/training"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slid_from_left" />
    </fragment>
    <fragment
        android:id="@+id/home2"
        android:name="com.engineer.mobiletrainer.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home2_to_exerciseChoice"
            app:destination="@id/exerciseChoice"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slid_from_left" />
    </fragment>
</navigation>